{
    "name": "asi-gyan-monorepo",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.includes('pnpm')){console.error('This repo uses pnpm. Install via Corepack: https://pnpm.io/installation'); process.exit(1)}\"",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "check": "pnpm -r run check",
    "fix": "pnpm -r run lint:fix && pnpm -r run format",
    "build:backend": "pnpm -C apps/backend build",
    "pm2:backend": "pm2 start pnpm --name \"asi-gyan-backend\" --cwd apps/backend -- start",
    "pm2:backend:direct": "pm2 start apps/backend/dist/index.js --name \"asi-gyan-backend\"",
    "pm2:restart": "pm2 restart asi-gyan-backend",
    "pm2:stop": "pm2 stop asi-gyan-backend",
    "pm2:delete": "pm2 delete asi-gyan-backend",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup"
  },
    "devDependencies": {
        "turbo": "^2.1.1",
        "prettier": "^3.6.2"
    },
    "packageManager": "pnpm@9.15.9"
}
